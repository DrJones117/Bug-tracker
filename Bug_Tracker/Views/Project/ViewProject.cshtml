@{
    ViewData["Title"] = "View Project Page";
}

<div class="bg-white p-4 rounded">
    <div class="d-flex justify-content-between">
        <h1>@Model.ProjectName</h1>
        <div class="d-flex justify-content-between">
            <a asp-action="EditProjectForm" asp-controller="Project" asp-route-projectId="@Model.ProjectId" class="btn btn-warning mt-3 me-5">Edit Project</a>
            <form asp-action="DeleteProject" asp-controller="Project" asp-route-projectId="@Model.ProjectId" method="post">
                <button type="submit" class="btn btn-danger mt-3 h-75">Delete Project</button>
            </form>
        </div>
    </div>
    <hr>


    <div>
        <div class="d-flex justify-content-between">
            <h2 class="mb-3">Open Bugs:</h2>
            <div class="d-flex justify-content-between">
                <h4 class="mt-3 me-5">@Model.AllBugs.Count Bugs</h4>
                <a asp-action="" class="btn btn-secondary rounded text-white pt-3 p-2">Add a Bug+</a>
            </div>
        </div>
        <div class="m-2 p-4 d-flex bg-secondary rounded">
            <div class="me-2 p-2 w-25 rounded text-center bg-danger">
                <h4>Catastrophic</h4>
                <hr>
                <div class="h-75 overflow-auto">
                    
                </div>
            </div>

            <div style="background-color: #fd7e14;" class="me-2 p-2 w-25 rounded text-center">
                <h4>Impaired</h4>
                <hr>
                <div class="h-75 overflow-auto">

                </div>
            </div>

            <div style="background-color: #ffc107;" class="me-2 p-2 w-25 rounded text-center">
                <h4>Non-Critical</h4>
                <hr>
                <div class="h-75 overflow-auto">

                </div>
            </div>

            <div style="background-color: #10c7ff;" class="me-2 p-2 w-25 rounded text-center">
                <h4>Minor</h4>
                <hr>
                <div class="h-75 overflow-auto">
                    
                </div>
            </div>
        </div>
    </div>
</div>