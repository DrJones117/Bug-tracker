@{
    ViewData["Title"] = "Home Page";
}

<div class="d-flex">
    <div style="background-color: #007bff;" class="me-5 p-2 rounded w-25">
        <h1 class="bg-white p-2 rounded">Projects</h1>
        <hr>

        <div class="overflow-y">
            @foreach (var project in Model)
            {
                <a id="editButton" class="btn btn-secondary p-3" href="@Url.Action("EditProject", "Project", new { projectId = project.ProjectId })">Edit</a>
            }
        </div>
    </div>

    <div id="projectDetails" style="background-color: #f8f9fa;" class="text-center bg-white rounded p-4 w-75">
        <h2 id="renameProjectHeader" style="color: #6f42c1;" class="d-flex justify-content-start">Please select a Project!</h2>
        <!-- Display the selected project's name -->
        <hr>
                
        <div id="actionButtons" style="background-color: #007bff; display: none;" class="p-3 rounded">
            <div style="background-color: #f8f9fa;" class="rounded p-2 mb-3">
                <h1 class="d-flex justify-content-start">Edit Project</h1>

                <div class="d-flex justify-content-between ps-3 pe-3">
                    <p>The action will let you edit the project</p>
                    <a id="editButton" class="btn btn-secondary p-3">Edit</a>
                </div>
            </div>

            <div style="background-color: #f8f9fa;" class="rounded p-2">
                <h1 class="d-flex justify-content-start text-danger">Delete Project</h1>

                <div class="d-flex justify-content-between ps-3 pe-3">
                    <p>The action will let you <span class="text-danger">DELETE</span> the project!</p>
                    <!-- Display the selected project's name -->
                    <button class="btn btn-danger p-3">Delete</button>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function showProjectDetails(name, description, editUrl) {
        document.getElementById("renameProjectHeader").innerText = "Project: " + name;
        document.getElementById("projectDetails").style.display = "block";
        document.getElementById("actionButtons").style.display = "block";
        document.getElementById("editButton").href = editUrl;
    }
</script>
