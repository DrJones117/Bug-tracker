@{
    ViewData["Title"] = "Login";
}


<div class="bg-white rounded p-3 ms-5">
    <h1>Login</h1>

    <form asp-action="LogIn" asp-controller="Home" method="post">
        <div>
            <label for="LogEmail">Email:</label>
            <input for="LogEmail" class="form-control">
            <span for="LogEmail" class="text-danger"></span>
        </div>
        <button class="btn btn-primary mt-2">Log In</button>
    </form>
</div>